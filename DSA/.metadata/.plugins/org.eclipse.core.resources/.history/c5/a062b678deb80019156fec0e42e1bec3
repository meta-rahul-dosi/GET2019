package Employee;

public class Employee {

	Node header = null;

	Employee() {
		System.out.println(header.next.name);
		printLinkedList();
	}

	Employee(String name, float salary, int age) {
		Node node = new Node();
		node.setName(name);
		node.getName();
		node.setSalary(salary);
		node.getSalary();
		node.setAge(age);
		node.getAge();
		createLinkedList(node);
	}

	public static void main(String arg[]) {

		Employee emp1 = new Employee("Ram", 224000, 125);
		Employee emp2 = new Employee("Ram", 224000, 125);
		Employee emp3 = new Employee("Ram", 224000, 125);
		Employee emp4 = new Employee("Ram", 224000, 125);

		Employee emp = new Employee();

	}

	void createLinkedList(Node node) {
		if (header == null)
			header = node;
		else {
			node = header;
			header = node.next;
		}
		
		// printing LinkedList
		node = header;
		while (node != null) {
			System.out.println(node.name);
			node = node.next;
		}
	}

	void printLinkedList() {
		Node node = new Node();
		node = header;
		while (node != null) {
			System.out.println(node.name);
			node = node.next;
		}
	}
}
