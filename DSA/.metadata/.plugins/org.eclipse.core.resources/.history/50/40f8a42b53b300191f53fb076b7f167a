import java.util.Scanner;
import java.lang.*;

public class Polynomial {

	 Scanner scanner = new Scanner(System.in);
	 Node header = null;

	public static void main(String argument[]) {
		Polynomial poly = new Polynomial();
		static Scanner scan = scanner;
		System.out.println("lets create polynomial");
		System.out.println("enter no of terms");
		int noOfTerms = scanner.nextInt();
		poly.createPolynomial(noOfTerms);
	}

	static void createPolynomial(int numberOfTerms) {
		Node node = new Node();

		for (int index = 1; index <= numberOfTerms; index++) {
			System.out.println("enter coefficient : ");
			node.coefficient = scanner.nextInt();

			System.out.println("enter number of variables : ");
			int noVariables = scanner.nextInt();
			System.out.println("enter variables ");
			for (int i = 0; i < noVariables; i++) {
				node.variables.add(scanner.next().charAt(0));
				
			}

			System.out.println("enter corresponding powers ");
			for (int i = 0; i < noVariables; i++) {
				node.powers.add(scanner.nextInt());
			}
		}

		if (header == null)
			header = node;
		else {
			node.next = header;
			header = node;
		}
		
		returnDegree();
	}

	static int returnDegree() {
		int degree = 0, previous = 0, i=0;
		Node node = new Node();
		node = header;
		while (node != null) {
			for(int index=0; index < node.powers.size(); index++)
			degree += node.powers.get(i);
			
			if(degree < previous)
				degree = previous;
		}
        System.out.println(degree);
		return degree;
	}
}




