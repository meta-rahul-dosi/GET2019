import java.util.*;

public class Polynomial {

	Scanner scanner = new Scanner(System.in);
	Node header = null;
	private String poly = ""; 
	private int size = 0;

	public static void main(String argument[]) {
		Polynomial poly = new Polynomial();
		System.out.println("lets create polynomial\n");
		
		poly.createPolynomial(3,new String[]{"x^","y^"}, new int[]{2,1});
		poly.createPolynomial(4,new String[]{"x^","z^"}, new int[]{2,3});
		poly.createPolynomial(-2,new String[]{"x^","y^","z^"}, new int[]{4,1,2});	
	}

	void createPolynomial(int coeff, String[] variables, int[] powers) {		
		Node node = new Node();
		
		node.coeff = coeff;
		poly = poly.concat(node.coeff);
		System.out.println(variables[0]);
		for(int index=0; index < variables.length; index++)
		{
			node.variables.add(variables[index]);
			node.powers.add(powers[index]);
		}
		node.next = null;
		
		if(header == null)
			header = node;
		else
			header.next = node;
		
		//printing linked list
		Node node1 = new Node();
		node1 =header;
		while(node1 != null)
		{
			System.out.println(node1.coeff+node.variables);
			node1 = node1.next;
		}
	}

	void visualize(int coefficient, List<Character> variables,
			List<Integer> powers) {
		Node node = new Node();
	}

	void returnDegree() {
	}
}


