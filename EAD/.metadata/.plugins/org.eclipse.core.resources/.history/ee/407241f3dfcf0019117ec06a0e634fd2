	<br />
	<br />

	<%
		DBConnection dbconn = new DBConnection();
		Connection connection = dbconn.connectDB();

		String query = "SELECT daily, monthly, yearly FROM pass_prices WHERE vehicleType = "
				+ "'" + vehicleTypeCame + "'";
		Statement stmt = connection.createStatement();
		ResultSet rs = stmt.executeQuery(query);
		rs.next();
		int dailyPrice = (int) rs.getInt(1);
		int monthlyPrice = (int) rs.getInt(2);
		int yearlyPrice = (int) rs.getInt(3);
	%>

	<form>
		<select>
			<option name="dailyPrice" value="dailyPrice">
				<%=dailyPrice%></option>
			<option name=monthlyPrice " value="monthlyPrice">
				<%=monthlyPrice%></option>
			<option name="yearlyPrice" value="yearlyPrice">
				<%=yearlyPrice%></option>
	</form>

